extends layout.pug

block content

  article.portfolio-intro

    h1 My Portfolio
    p A full stack Web development portfolio that demonstrates most of my projects and accomplishments with web page extensions.

  article.portfolio-project-thumbs
    .projects-box.box.grid

      
      each project in projects
        .cell
          a(href=`/projects/${project.id}`)
            img.thumbnail(src=`${project.image_urls[0]}` alt='thumbnail')
            h5 #{project.project_name}
            

